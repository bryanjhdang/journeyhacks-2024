{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Duck Blocker",
    "description": "A duck that follows your online journey to keep you accountable.",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "32": "duck_logo.png"
    },
    "background": {
        "service_worker": "sw.js",
        "type": "module"
    }
}